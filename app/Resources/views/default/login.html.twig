{% extends 'base.html.twig' %}
{% block title %} Login {% endblock %}

{% block body %}
    <div class="container">
        <div class="login">
            <form class="form-signin" action="{{ path('login_check') }}" method="post" novalidate
                  data-toggle="validator">
                <div class="form-group">
                    <label for="text" class="sr-only">Username:</label>
                    <input type="text" id="text" name="_username" class="form-control" placeholder="foo@bar.com"
                           required autofocus="autofocus" data-error="Error for username"/>
                    <div class="help-block with-errors"></div>
                </div>

                <div class="form-group">
                    <label for="password" class="sr-only">Password:</label>
                    <input type="password" id="password" class="form-control" name="_password" required
                           data-minlength="6" placeholder="Password" data-error="Error for password"/>
                    <div class="help-block with-errors"></div>
                </div>

                {% if error %}
                    <div class="alert alert-danger">{{ error }}</div>
                {% endif %}
                <button type="submit" class="btn btn-lg btn-primary btn-block">Login</button>
                <a class="btn btn-lg btn-primary btn-block" href="{{ path("register") }}">Register</a>
            </form>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#form-signin').validator()
        })

    </script>
{% endblock %}